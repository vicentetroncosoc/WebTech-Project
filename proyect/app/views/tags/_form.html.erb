<%= form_with model: @tag, local: true, data: { turbo: false } do |f| %>
  <% if @tag.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Revisa los errores:</h4>
      <ul class="mb-0">
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true, maxlength: 50, placeholder: "ej. running" %>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", (@tag.persisted? ? @tag : tags_path), class: "btn btn-outline-secondary" %>
  </div>
<% end %>