<h1 class="mb-3">Tags</h1>

<div class="d-flex justify-content-end mb-3">
  <% if can?(:create, Tag) %>
    <%= link_to "â• Nuevo Tag", new_tag_path, class: "btn btn-primary" %>
  <% end %>
</div>

<ul class="list-group">
  <% @tags.each do |t| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">

      <!-- Nombre + contador de challenges -->
      <div>
        <%= link_to t.name, t %>
        <span class="badge text-bg-secondary ms-2">
          <%= t.challenges.count %>
        </span>
      </div>

      <!-- Acciones -->
      <div class="d-flex gap-2">

        <!-- Ver: todos pueden -->
        <% if can?(:read, t) %>
          <%= link_to "Ver",
                      t,
                      class: "btn btn-sm btn-outline-secondary" %>
        <% end %>

        <!-- Editar: creator / admin -->
        <% if can?(:update, t) %>
          <%= link_to "Editar",
                      edit_tag_path(t),
                      class: "btn btn-sm btn-outline-primary" %>
        <% end %>

        <!-- Eliminar: creator / admin -->
        <% if can?(:destroy, t) %>
          <%= button_to "Eliminar",
                        t,
                        method: :delete,
                        form: { data: { turbo: false } },
                        onclick: "return confirm('Â¿Eliminar este tag?');",
                        class: "btn btn-sm btn-outline-danger" %>
        <% end %>

      </div>
    </li>
  <% end %>
</ul>