<h1>#<%= @tag.name %></h1>

<div class="mt-3 d-flex gap-2">
  <%= link_to "Editar", edit_tag_path(@tag), class: "btn btn-outline-primary" %>

  <%= button_to "Eliminar", @tag, method: :delete,
        form: { data: { turbo: false } },
        onclick: "return confirm('¿Eliminar este tag?');",
        class: "btn btn-outline-danger" %>
  <%= link_to "Volver", tags_path, class: "btn btn-secondary ms-auto" %>
</div>

<h4 class="mt-4">Challenges</h4>
<ul class="list-group">
  <% @challenges.each do |c| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <%= link_to c.name, c %>
        <span class="text-muted small ms-2">— <%= c.owner.name.presence || c.owner.email %></span>
      </div>
      <span class="badge text-bg-light"><%= c.start_date %> – <%= c.end_date %></span>
    </li>
  <% end %>
</ul>