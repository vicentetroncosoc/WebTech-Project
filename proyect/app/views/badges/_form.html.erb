<%= form_with model: @badge, local: true, data: { turbo: false } do |f| %>
  <% if @badge.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Revisa los errores:</h4>
      <ul class="mb-0">
        <% @badge.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :code, "Código", class: "form-label" %>
    <%= f.text_field :code, class: "form-control", required: true %>
    <div class="form-text">Debe ser único (por ejemplo: "first_challenge_completed").</div>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descripción", class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= f.submit(@badge.new_record? ? "Crear badge" : "Actualizar badge",
                 class: "btn btn-primary") %>
  </div>
<% end %>