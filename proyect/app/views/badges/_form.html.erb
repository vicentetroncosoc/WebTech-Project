<%= form_with model: @badge, local: true, data: { turbo: false } do |f| %>
  <% if @badge.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Revisa los errores:</h4>
      <ul class="mb-0">
        <% @badge.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true, maxlength: 100, placeholder: "p.ej., Finisher 7-días" %>
  </div>

  <div class="mb-3">
    <%= f.label :code, "Código (único)", class: "form-label" %>
    <%= f.text_field :code, class: "form-control", required: true, maxlength: 50, placeholder: "p.ej., FINISHER_7D" %>
    <div class="form-text">Usa letras, números y guiones bajos.</div>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descripción", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 3, maxlength: 500, placeholder: "Texto opcional" %>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", (@badge.persisted? ? @badge : badges_path), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
