<h1><%= @badge.name %></h1>

<p class="text-muted">
  <strong>Código:</strong> <code><%= @badge.code %></code>
</p>

<% if @badge.description.present? %>
  <p><%= simple_format(@badge.description) %></p>
<% end %>

<div class="mt-3 d-flex gap-2">

  <!-- Editar: creator / admin -->
  <% if can?(:update, @badge) %>
    <%= link_to "Editar",
                edit_badge_path(@badge),
                class: "btn btn-outline-primary" %>
  <% end %>

  <!-- Eliminar: creator / admin -->
  <% if can?(:destroy, @badge) %>
    <%= button_to "Eliminar",
                  @badge,
                  method: :delete,
                  form: { data: { turbo: false } },
                  onclick: "return confirm('¿Eliminar este badge?');",
                  class: "btn btn-outline-danger" %>
  <% end %>

  <!-- Volver: siempre -->
  <%= link_to "Volver",
              badges_path,
              class: "btn btn-secondary ms-auto" %>
</div>