<h1><%= @user.username %></h1>

<p class="text-muted">
  <% if @user.name.present? %>
    <strong>Nombre:</strong> <%= @user.name %> |
  <% end %>
  <strong>Email:</strong> <%= @user.email %>
  <% if @user.role.present? %> | <strong>Rol:</strong> <%= @user.role %><% end %>
</p>

<% if @user.avatar_url.present? %>
  <p><img src="<%= @user.avatar_url %>" alt="avatar" class="img-thumbnail" style="max-width: 160px;"></p>
<% end %>

<% if @user.bio.present? %>
  <p><%= simple_format(@user.bio) %></p>
<% end %>

<div class="mt-3 d-flex gap-2">
  <%= link_to "Editar", edit_user_path(@user), class: "btn btn-outline-primary" %>
  <%= button_to "Eliminar", @user,
        method: :delete,
        form: { data: { turbo: false } },
        onclick: "return confirm('Â¿Seguro que deseas eliminar este usuario?');",
        class: "btn btn-outline-danger" %>
  <%= link_to "Volver", users_path, class: "btn btn-secondary ms-auto" %>
</div>