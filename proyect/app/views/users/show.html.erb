<h1><%= @user.name.presence || @user.username %></h1>
<p class="text-muted">
  <strong>Email:</strong> <%= @user.email %> |
  <strong>Role:</strong> <%= @user.role || "standard" %>
</p>
<% if @user.bio.present? %>
  <p><%= simple_format(@user.bio) %></p>
<% end %>

<h4 class="mt-4">Owned Challenges</h4>
<ul>
  <% @user.owned_challenges.each do |c| %>
    <li><%= link_to c.name, c %> (<%= c.start_date %> â€“ <%= c.end_date %>)</li>
  <% end %>
</ul>

<h4 class="mt-4">Badges</h4>
<p>
  <% @user.badges.each do |b| %>
    <span class="badge text-bg-success me-1"><%= b.name %></span>
  <% end %>
  <% if @user.badges.empty? %>
    <em>No badges yet</em>
  <% end %>
</p>
