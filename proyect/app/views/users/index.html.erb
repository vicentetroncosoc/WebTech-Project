<h1 class="mb-4">Usuarios</h1>

<div class="d-flex justify-content-end mb-3">
  <%= link_to "➕ New User", new_user_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>Username</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Rol</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= link_to u.username, u %></td>
        <td><%= u.name.presence || "-" %></td>
        <td><%= u.email %></td>
        <td><%= u.role.presence || "-" %></td>
        <td class="text-end">
          <div class="d-inline-flex gap-2">
            <%= link_to "Ver", u, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Editar", edit_user_path(u), class: "btn btn-sm btn-outline-primary" %>
            <%= button_to "Eliminar", u,
                  method: :delete,
                  form: { data: { turbo: false } },
                  onclick: "return confirm('¿Eliminar este usuario?');",
                  class: "btn btn-sm btn-outline-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>