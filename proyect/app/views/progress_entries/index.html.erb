<h1>Progress entries</h1>
<table class="table table-hover bg-white">
  <thead><tr><th>Date</th><th>User</th><th>Challenge</th><th>Qty</th><th>Points</th></tr></thead>
  <tbody>
    <% @entries.each do |e| %>
      <tr>
        <td><%= link_to e.logged_on, e %></td>
        <td><%= link_to (e.participation.user.name || e.participation.user.email), e.participation.user %></td>
        <td><%= link_to e.participation.challenge.name, e.participation.challenge %></td>
        <td><%= e.quantity %></td>
        <td><%= e.points_awarded %></td>
      </tr>
    <% end %>
  </tbody>
</table>

