<h1>Progress Register</h1>

<p class="text-muted">
  <strong>Fecha:</strong> <%= @progress_entry.logged_on %> |
  <strong>Usuario:</strong> <%= @progress_entry.participation.user.name.presence || @progress_entry.participation.user.email %> |
  <strong>Challenge:</strong> <%= link_to @progress_entry.participation.challenge.name, @progress_entry.participation.challenge %>
</p>

<ul class="list-group mb-3">
  <li class="list-group-item d-flex justify-content-between">
    <span>Cantidad</span>
    <strong><%= @progress_entry.quantity %></strong>
  </li>
  <li class="list-group-item d-flex justify-content-between">
    <span>Puntos</span>
    <strong><%= @progress_entry.points_awarded %></strong>
  </li>
  <% if @progress_entry.note.present? %>
    <li class="list-group-item">
      <strong>Nota:</strong>
      <div><%= @progress_entry.note %></div>
    </li>
  <% end %>
</ul>

<div class="mt-3 d-flex gap-2">
  <%= link_to "Editar", edit_progress_entry_path(@progress_entry), class: "btn btn-outline-primary"   %>
  <%= button_to "Eliminar", @progress_entry, method: :delete,
        form: { data: { turbo: false } },
        onclick: "return confirm('Â¿Seguro que deseas aliminar este registro?');",
        class: "btn btn-outline-danger" %>
  <%= link_to "Volver", progress_entries_path, class: "btn btn-secondary ms-auto" %>
</div>
