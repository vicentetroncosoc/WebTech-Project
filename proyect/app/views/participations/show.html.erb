<h1>Participation</h1>
<p><strong>User:</strong> <%= link_to (@participation.user.name || @participation.user.email), @participation.user %></p>
<p><strong>Challenge:</strong> <%= link_to @participation.challenge.name, @participation.challenge %></p>
<p><strong>Role:</strong> <%= @participation.role %> | <strong>State:</strong> <%= @participation.state %> | <strong>Total:</strong> <%= @participation.total_points %> pts</p>

<h4 class="mt-3">Progress entries</h4>
<ul class="list-group">
  <% @participation.progress_entries.each do |e| %>
    <li class="list-group-item d-flex justify-content-between">
      <span><%= e.logged_on %> â€” <%= e.note.presence || "-" %></span>
      <span><%= e.quantity %> | <strong><%= e.points_awarded %> pts</strong></span>
    </li>
  <% end %>
</ul>
